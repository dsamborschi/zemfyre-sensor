{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug Agent",
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "npm",
      "runtimeArgs": ["run", "dev"],
      "cwd": "${workspaceFolder}/agent",
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "skipFiles": ["<node_internals>/**"],
      "restart": true,
      "sourceMaps": true,
      
      "resolveSourceMapLocations": [
        "${workspaceFolder}/**",
        "!**/node_modules/**"
      ],
      "env": {
        "CLOUD_API_ENDPOINT": "http://localhost:4002",
        "LOG_COMPRESSION": "true",
        "ENABLE_SENSOR_PUBLISH": "true",  
        "ENABLE_JOB_ENGINE": "true",
        "MQTT_BROKER": "mqtt://localhost:5883",
        "ENABLE_SHADOW": "true",
        "PROVISIONING_API_KEY": "your_provisioning_api_key_64_chars_aaaaaaaaaaaaaaaaaaaaaaaaaaaaaaa",
        "SENSOR_PUBLISH_CONFIG": "{\"sensors\":[{\"name\":\"sensor1\",\"addr\":\"/tmp/sensor1.sock\",\"eomDelimiter\":\"\\\\n\",\"mqttTopic\":\"sensor/data\",\"bufferSize\":100,\"bufferTimeMs\":1000}]}"
      }
    },
    {
      "name": "Debug API",
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "npm",
      "runtimeArgs": ["run", "dev"],
      "cwd": "${workspaceFolder}/api",
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "skipFiles": ["<node_internals>/**"],
      "restart": true,
      "sourceMaps": true,
      
      "resolveSourceMapLocations": [
        "${workspaceFolder}/**",
        "!**/node_modules/**"
      ],
      "env": {
            "PORT":"4002",
            "NODE_ENV":"development",
            "DB_HOST":"localhost",
            "DB_PORT":"5432",
            "DB_NAME":"iotistic",
            "DB_USER":"postgres",
            "DB_PASSWORD":"postgres",
            "DB_POOL_SIZE":"20",
            "FORCE_COLOR":"1"
      }
    }
  ]
}
