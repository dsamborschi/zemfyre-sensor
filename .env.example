# Environment Variables Template
# Copy this file to .env and update with your actual values

# ========================================
# Sensor Simulator Configuration
# ========================================

# Number of simulated sensors (creates sensor1.sock, sensor2.sock, etc.)
SIM_NUM_SENSORS=3

# Data publish interval in milliseconds (60000 = 1 minute)
SIM_PUBLISH_INTERVAL_MS=60000

# Enable random sensor failures for testing
SIM_ENABLE_FAILURES=true

# Failure probability per publish interval (0.05 = 5%)
SIM_FAILURE_CHANCE=0.05

# Delay before recovery after failure in milliseconds (10000 = 10 seconds)
SIM_RECONNECT_DELAY_MS=10000

# Data output format: json or csv
SIM_DATA_FORMAT=json

# End-of-message delimiter (use \n for newline)
SIM_EOM_DELIMITER=\n

# Logging level: debug, info, warn, error
SIM_LOG_LEVEL=info

# ========================================
# Grafana Configuration
# ========================================

GRAFANA_USERNAME=admin
GRAFANA_PASSWORD=your-secure-password-here
GRAFANA_AUTH_ANONYMOUS_ENABLED=true
GRAFANA_AUTH_ANONYMOUS_ORG_ROLE=Admin
GRAFANA_AUTH_DISABLE_LOGIN_FORM=true
GRAFANA_API_TOKEN=your-grafana-api-token-here

# Display Configuration (for Linux GUI apps)
DISPLAY=:0
DBUS_SESSION_BUS_ADDRESS=unix:path=/run/user/1000/bus

# PostgreSQL Configuration
DB_PASSWORD=postgres
# DB_PORT_EXT=5432

# API Configuration
API_PORT_EXT=3002

# MQTT Configuration
MQTT_PASSWORD=iotistic42!

# License Configuration (for production, set these in .env)
# LICENSE_PUBLIC_KEY=-----BEGIN PUBLIC KEY-----\n...\n-----END PUBLIC KEY-----
# IOTISTIC_LICENSE_KEY=eyJhbGciOiJSUzI1NiIsInR5cCI6IkpXVCJ9...

# Optional: External Port Mappings
# MOSQUITTO_PORT_EXT=51883
# MOSQUITTO_WS_PORT_EXT=59001
# NODERED_PORT_EXT=51880
# INFLUXDB_PORT_EXT=58086
# GRAFANA_PORT_EXT=53000
# ADMIN_PORT_EXT=51850

# Optional: InfluxDB Configuration
# INFLUXDB_INIT_ORG=Iotistic
# INFLUXDB_INIT_BUCKET=ZUS80LP

# ========================================
# VPN Server Configuration
# ========================================

# VPN Server Host (public IP or domain)
VPN_SERVER_HOST=your-vpn-server.example.com

# VPN Server OpenVPN Port
VPN_SERVER_PORT=1194

# VPN API Server Port
VPN_API_PORT=3200

# VPN Management Interface Port
VPN_MGMT_PORT=7505

# VPN Admin Web UI Port
VPN_ADMIN_PORT=8080

# VPN Database Name (uses main PostgreSQL instance)
VPN_DB_NAME=iotistic_vpn

# VPN Log Level
VPN_LOG_LEVEL=info