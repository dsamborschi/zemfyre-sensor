# VPN Server Environment Configuration

# Database Configuration
DATABASE_URL=postgresql://postgres:password@postgres:5432/iotistic_vpn
REDIS_URL=redis://redis:6379

# VPN Server Configuration
VPN_SERVER_HOST=vpn.iotistic.ca
VPN_SERVER_PORT=1194
VPN_PROTOCOL=udp
VPN_SUBNET=10.8.0.0/16
VPN_NETMASK=255.255.0.0
VPN_POOL_START=10.8.1.0
VPN_POOL_END=10.8.254.254

# Certificate Paths
VPN_CA_CERT_PATH=/etc/openvpn/pki/ca.crt
VPN_CA_KEY_PATH=/etc/openvpn/pki/private/ca.key
VPN_SERVER_CERT_PATH=/etc/openvpn/pki/issued/server.crt
VPN_SERVER_KEY_PATH=/etc/openvpn/pki/private/server.key
VPN_DH_PATH=/etc/openvpn/pki/dh.pem
VPN_CRL_PATH=/etc/openvpn/pki/crl.pem

# API Server Configuration
API_PORT=3200
API_HOST=0.0.0.0
API_CORS_ORIGIN=https://dashboard.iotistic.ca
API_JWT_SECRET=your-super-secret-jwt-key-here

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=/var/log/vpn-server.log
OPENVPN_LOG_FILE=/var/log/openvpn.log
OPENVPN_STATUS_FILE=/var/log/openvpn-status.log

# Security Configuration
CERT_VALIDITY_DAYS=365
CERT_KEY_SIZE=2048
ENABLE_CRL=true
ENABLE_AUDIT_LOG=true

# Performance Configuration
MAX_CLIENTS=1000
KEEPALIVE_PING=10
KEEPALIVE_TIMEOUT=120
CLIENT_TO_CLIENT=true
COMP_LZO=true

# Integration Configuration
BILLING_SERVICE_URL=http://billing:3100
DEVICE_REGISTRY_SYNC=true
METRICS_COLLECTION=true
HEALTH_CHECK_INTERVAL=60

# Development Configuration
NODE_ENV=development
DEBUG=vpn-server:*
ENABLE_API_DOCS=true