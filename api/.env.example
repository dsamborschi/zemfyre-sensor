# Zemfyre API Environment Configuration

# Server Configuration
PORT=3002
NODE_ENV=development

# Database Configuration
# Set USE_POSTGRES=true to enable PostgreSQL backend (default: false = in-memory)
USE_POSTGRES=false

# PostgreSQL Connection (only used when USE_POSTGRES=true)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=zemfyre
DB_USER=postgres
DB_PASSWORD=postgres
DB_POOL_SIZE=20

# Grafana Configuration
GRAFANA_URL=http://localhost:3000
GRAFANA_API_TOKEN=your_grafana_api_token_here

# Docker Configuration
DOCKER_SOCKET_PATH=/var/run/docker.sock

# Optional: Authentication
# API_KEY=your-secret-api-key-here
