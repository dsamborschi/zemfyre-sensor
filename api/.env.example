# Zemfyre API Environment Configuration

# Server Configuration
PORT=3002
NODE_ENV=development

# PostgreSQL Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=iotistic
DB_USER=postgres
DB_PASSWORD=postgres
DB_POOL_SIZE=20

# Grafana Configuration
GRAFANA_URL=http://localhost:3000
GRAFANA_API_TOKEN=your_grafana_api_token_here

# Docker Configuration
DOCKER_SOCKET_PATH=/var/run/docker.sock

# Optional: Authentication
# API_KEY=your-secret-api-key-here

# Image Monitor Configuration
# Enable/disable Docker Hub image monitoring (default: true)
IMAGE_MONITOR_ENABLED=true
# Check interval in minutes (default: 60)
IMAGE_MONITOR_INTERVAL_MINUTES=60

# Trivy Security Scanner Configuration
# Enable/disable Trivy vulnerability scanning (default: true)
TRIVY_ENABLED=true
# Auto-reject images with critical vulnerabilities (default: false)
TRIVY_AUTO_REJECT_CRITICAL=false
