{
  "apps": {
    "1": {
      "appId": 1,
      "appName": "mosquitto",
      "services": [
        {
          "serviceId": 1,
          "serviceName": "mosquitto",
          "imageId": "eclipse-mosquitto:latest",
          "config": {
            "image": "eclipse-mosquitto:latest",
            "ports": ["1883:1883", "9001:9001"],
            "restart": "unless-stopped"
          }
        }
      ]
    }
  },
  "config": {
    "mqtt": {
      "broker": "mqtt://mosquitto:1883",
      "username": "admin",
      "password": "iotistic42!",
      "retryInterval": 30,
      "qos": 1,
      "clientIdPrefix": "iotistic-device"
    },
    "features": {
      "enableCloudJobs": true,
      "enableJobEngine": true,
      "pollingIntervalMs": 30000,
      "enableHealthChecks": true,
      "enableDigitalTwin": true
    },
    "logging": {
      "level": "info",
      "compression": true,
      "maxFiles": 7,
      "maxSize": "10m",
      "logToFile": true,
      "logToConsole": true
    },
    "api": {
      "port": 48484,
      "timeout": 30000,
      "enableMetrics": true,
      "enableCors": true,
      "corsOrigins": ["*"]
    },
    "healthChecks": {
      "enabled": true,
      "defaultTimeout": 30,
      "defaultPeriod": 10,
      "defaultFailureThreshold": 3,
      "defaultSuccessThreshold": 1
    },
    "reconciliation": {
      "intervalSeconds": 10,
      "maxRetries": 3,
      "retryDelaySeconds": 5
    },
    "docker": {
      "socketPath": "/var/run/docker.sock",
      "cleanupOrphanContainers": true,
      "cleanupOrphanImages": false
    },
    "storage": {
      "dataPath": "/app/data",
      "logPath": "/app/logs",
      "maxStorageGB": 10
    }
  }
}
