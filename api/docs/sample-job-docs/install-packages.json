{
  "_comment": "Package installation sample for Ubuntu/Debian systems using apt.",
  "version": "1.0",
  "includeStdOut": true,
  "steps": [
    {
      "name": "Update Package Lists",
      "type": "runCommand",
      "input": {
        "command": "apt-get,update"
      },
      "runAsUser": "root"
    },
    {
      "name": "Install Packages",
      "type": "runHandler",
      "input": {
        "handler": "install-packages.sh",
        "args": [
          "curl",
          "wget"
        ],
        "path": "default"
      },
      "runAsUser": "root"
    }
  ]
}