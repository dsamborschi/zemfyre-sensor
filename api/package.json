{
  "name": "zemfyre-api",
  "version": "2.0.0",
  "description": "Unified Zemfyre API - combines Grafana control, Docker management, and cloud multi-device management",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "watch": "tsc --watch",
    "start": "node dist/index.js",
    "dev": "ts-node src/index.ts",
    "clean": "rimraf dist",
    "migrate": "ts-node scripts/migrate.ts run",
    "migrate:status": "ts-node scripts/migrate.ts status",
    "migrate:create": "ts-node scripts/migrate.ts create",
    "migrate:mark-applied": "ts-node scripts/mark-migrations-applied.ts",
    "migrate:unmark": "ts-node scripts/unmark-migrations.ts"
  },
  "keywords": [
    "iot",
    "api",
    "docker",
    "grafana",
    "device-management"
  ],
  "dependencies": {
    "axios": "^1.12.2",
    "bcrypt": "^6.0.0",
    "cors": "^2.8.5",
    "dockerode": "^4.0.0",
    "express": "^4.18.2",
    "express-rate-limit": "^8.1.0",
    "mqtt": "^5.14.1",
    "node-cron": "^4.2.1",
    "node-fetch": "^2.7.0",
    "pg": "^8.11.3",
    "winston": "^3.18.3"
  },
  "devDependencies": {
    "@types/bcrypt": "^6.0.0",
    "@types/cors": "^2.8.17",
    "@types/dockerode": "^3.3.23",
    "@types/express": "^4.17.21",
    "@types/node": "^20.19.22",
    "@types/node-cron": "^3.0.11",
    "@types/node-fetch": "^2.6.9",
    "@types/pg": "^8.10.9",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
