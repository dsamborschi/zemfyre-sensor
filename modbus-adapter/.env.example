# Environment variables for Modbus Adapter

# Configuration (JSON string or file path)
MODBUS_ADAPTER_CONFIG=config/example.json

# Alternative: inline JSON configuration
# MODBUS_ADAPTER_CONFIG={"devices":[{"name":"test","slaveId":1,"connection":{"type":"tcp","host":"localhost","port":502},"registers":[{"name":"temp","address":40001,"functionCode":3,"dataType":"int16"}],"pollInterval":5000}],"output":{"socketPath":"/tmp/sensors/modbus.sock"}}

# Logging level
LOG_LEVEL=info

# Socket output path (overrides config file)
SOCKET_PATH=/tmp/sensors/modbus.sock

# Data format (json or csv)
DATA_FORMAT=json