{
  "name": "zemfyre-billing",
  "version": "1.0.0",
  "description": "Global Billing - Stripe integration, license management, and subscription control for Zemfyre SaaS",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "watch": "tsc --watch",
    "start": "node dist/index.js",
    "dev": "ts-node src/index.ts",
    "clean": "rimraf dist",
    "migrate": "psql $DATABASE_URL -f migrations/001_initial_schema.sql",
    "generate-keys": "tsx scripts/generate-keys.ts"
  },
  "keywords": [
    "billing",
    "stripe",
    "saas",
    "licensing"
  ],
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "stripe": "^14.9.0",
    "jsonwebtoken": "^9.0.2",
    "pg": "^8.11.3",
    "bcrypt": "^6.0.0",
    "dotenv": "^16.3.1",
    "winston": "^3.18.3",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/cors": "^2.8.17",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/pg": "^8.10.9",
    "@types/bcrypt": "^6.0.0",
    "@types/node": "^20.19.22",
    "@types/uuid": "^9.0.7",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3",
    "rimraf": "^5.0.5",
    "tsx": "^4.7.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
