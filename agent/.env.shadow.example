# =============================================================================
# Shadow Feature Configuration
# =============================================================================
# AWS IoT Device Shadow support for device state synchronization
# Documentation: docs/SHADOW-ENV-VARS.md

# Enable/disable shadow feature
ENABLE_SHADOW=true

# Shadow name (required if enabled)
# Must be unique per device, used in MQTT topics
SHADOW_NAME=device-state

# Input file path (optional)
# JSON file containing state to publish to shadow
# If not set, default data { "welcome": "aws-iot" } is used
# Supports ~/ for home directory
SHADOW_INPUT_FILE=/app/data/shadow-input.json

# Output file path (optional)
# Where complete shadow documents are written
# Default: {DATA_DIR}/shadow-document.json
SHADOW_OUTPUT_FILE=/app/data/shadow-document.json

# Auto-sync on delta events (optional, default: true)
# When true: device automatically syncs reported state to match desired state
# When false: device receives delta events but doesn't auto-update
SHADOW_SYNC_ON_DELTA=true

# Enable file monitoring (optional, default: false)
# Watch SHADOW_INPUT_FILE for changes and auto-update shadow
# Requires SHADOW_INPUT_FILE to be set
SHADOW_FILE_MONITOR=false

# Periodic publish interval (optional, milliseconds)
# Publish shadow updates at regular intervals
# Minimum: 1000ms (1 second)
# If not set, only manual updates or file changes trigger publishes
SHADOW_PUBLISH_INTERVAL=60000

# Debug logging (optional, default: false)
# Enable verbose logging for shadow operations
SHADOW_DEBUG=false
