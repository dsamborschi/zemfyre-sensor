{
  "devices": [
    {
      "name": "demo-tcp-sensor",
      "slaveId": 1,
      "connection": {
        "type": "tcp",
        "host": "127.0.0.1",
        "port": 5020,
        "timeout": 2000,
        "retryAttempts": 1,
        "retryDelay": 1000
      },
      "registers": [
        {
          "name": "demo-value",
          "address": 40001,
          "functionCode": 3,
          "dataType": "uint16",
          "count": 1,
          "unit": "units",
          "description": "Demo register"
        }
      ],
      "pollInterval": 5000,
      "enabled": true
    }
  ],
  "output": {
    "socketPath": "\\\\.\\pipe\\modbus-demo",
    "dataFormat": "json",
    "delimiter": "\n",
    "includeTimestamp": true,
    "includeDeviceName": true
  },
  "logging": {
    "level": "info",
    "enableConsole": true,
    "enableFile": false
  }
}