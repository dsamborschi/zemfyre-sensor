{
  "_comment": "Long-running monitoring job that reports progress",
  "version": "1.0", 
  "jobId": "system-monitor-continuous",
  "operation": "continuous-monitoring",
  "reportProgress": true,
  "progressIntervalSeconds": 30,
  "maxDurationMinutes": 1440,
  "steps": [
    {
      "action": {
        "name": "system-monitor",
        "type": "runHandler", 
        "input": {
          "monitorInterval": 10,
          "metrics": ["cpu", "memory", "disk"],
          "thresholds": {
            "cpu": 80,
            "memory": 90,
            "disk": 95
          }
        },
        "runAsUser": "root"
      }
    }
  ]
}