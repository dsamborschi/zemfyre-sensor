{
  "_comment": "Complex multi-step job with both main steps and final cleanup step.",
  "version": "1.0",
  "includeStdOut": true,
  "steps": [
    {
      "name": "Install Temporary Package",
      "type": "runHandler",
      "input": {
        "handler": "install-packages.sh",
        "args": [
          "wget"
        ],
        "path": "default"
      },
      "runAsUser": "root"
    },
    {
      "name": "Download File",
      "type": "runHandler",
      "input": {
        "handler": "download-file.sh",
        "args": [
          "https://github.com/awslabs/aws-iot-device-client/archive/refs/tags/v1.3.tar.gz",
          "/tmp/Downloaded_File.tar.gz"
        ],
        "path": "default"
      },
      "runAsUser": "root"
    }
  ],
  "finalStep": {
    "name": "Remove Temporary Package",
    "type": "runHandler",
    "input": {
      "handler": "remove-packages.sh",
      "args": [
        "wget"
      ],
      "path": "default"
    },
    "runAsUser": "root"
  }
}