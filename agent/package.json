{
  "name": "device-agent",
  "version": "1.0.0",
  "description": "Standalone device agent",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc && npm run copy:migrations",
    "copy:migrations": "node -e \"require('fs').cpSync('src/migrations', 'dist/migrations', {recursive: true})\"",
    "watch": "tsc --watch",
    "clean": "rimraf dist",
    "dev": "tsx watch src/app.ts",
    "dev:cloud": "tsx watch src/api/cloud-server.ts",
    "dev:old-api": "tsx watch src/api/server.ts",
    "dev:livepush": "tsx src/cli/livepush-dev.ts",
    "cli": "tsx cli/device-cli.ts",
    "cli:build": "tsc cli/device-cli.ts --outDir dist/cli --module commonjs --target es2020",
    "start": "node dist/app.js",
    "start:device": "node dist/app.js",
    "start:cloud": "node dist/api/cloud-server.js",
    "start:old-api": "node dist/api/server.js",
    "lint": "eslint src --ext .ts",
    "test": "jest",
    "test:unit": "jest --config jest.config.unit.js",
    "test:integration": "jest --config jest.config.integration.js",
    "test:watch": "jest --watch",
    "test:watch:unit": "jest --config jest.config.unit.js --watch",
    "test:watch:integration": "jest --config jest.config.integration.js --watch",
    "test:coverage": "jest --coverage",
    "test:coverage:unit": "jest --config jest.config.unit.js --coverage",
    "test:coverage:integration": "jest --config jest.config.integration.js --coverage"
  },
  "bin": {
    "device-cli": "./dist/cli/device-cli.js"
  },
  "keywords": [
    "device-agent",
    "docker",
    "container-orchestration",
    "api"
  ],
  "author": "",
  "license": "Apache-2.0",
  "dependencies": {
    "@kubernetes/client-node": "^1.4.0",
    "@types/mqtt": "^0.0.34",
    "@types/node-cron": "^3.0.11",
    "@types/uuid": "^10.0.0",
    "axios": "^1.12.2",
    "blinking": "^1.0.1",
    "bluebird": "^3.7.2",
    "body-parser": "^1.20.2",
    "chokidar": "^3.5.3",
    "cors": "^2.8.5",
    "dockerode": "^4.0.2",
    "express": "^4.18.2",
    "fp-ts": "^2.16.5",
    "io-ts": "2.2.20",
    "knex": "^3.1.0",
    "livepush": "^2.0.0",
    "lodash": "^4.17.21",
    "memoizee": "^0.4.17",
    "mqtt": "^5.14.1",
    "network-checker": "^1.0.6",
    "node-cron": "^4.2.1",
    "sqlite3": "^5.1.6",
    "strict-event-emitter-types": "^2.0.0",
    "systeminformation": "^5.23.5",
    "typed-error": "^3.2.1",
    "uuid": "^13.0.0",
    "zod": "^3.22.0"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.11",
    "@types/bluebird": "^3.5.42",
    "@types/body-parser": "^1.19.5",
    "@types/cors": "^2.8.17",
    "@types/dockerode": "^3.3.28",
    "@types/events": "^3.0.3",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.0.0",
    "@types/lodash": "^4.17.0",
    "@types/memoizee": "^0.4.12",
    "@types/node": "^22.18.9",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "eslint": "^8.57.1",
    "jest": "^29.0.0",
    "rimraf": "^5.0.10",
    "ts-jest": "^29.0.0",
    "ts-node": "^10.0.0",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3"
  }
}
