{
  "name": "device-agent",
  "version": "1.0.0",
  "description": "Standalone device agent",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
    "scripts": {
    "build": "tsc",
    "watch": "tsc --watch",
    "clean": "rimraf dist",
    "dev": "tsx watch src/app.ts",
    "dev:cloud": "tsx watch src/api/cloud-server.ts",
    "dev:old-api": "tsx watch src/api/server.ts",
    "dev:livepush": "tsx src/cli/livepush-dev.ts",
    "start": "node dist/app.js",
    "start:device": "USE_REAL_DOCKER=true node dist/app.js",
    "start:cloud": "node dist/api/cloud-server.js",
    "start:old-api": "node dist/api/server.js",
    "lint": "eslint src --ext .ts",
    "test": "mocha --require ts-node/register test/**/*.spec.ts"
  },
  "keywords": [
    "device-agent",
    "docker",
    "container-orchestration",
    "api"
  ],
  "author": "",
  "license": "Apache-2.0",
  "dependencies": {
    "@types/mqtt": "^0.0.34",
    "@types/uuid": "^10.0.0",
    "@types/ws": "^8.18.1",
    "blinking": "^1.0.1",
    "bluebird": "^3.7.2",
    "body-parser": "^1.20.2",
    "chokidar": "^3.5.3",
    "cors": "^2.8.5",
    "dockerode": "^4.0.2",
    "express": "^4.18.2",
    "fp-ts": "^2.16.5",
    "io-ts": "2.2.20",
    "knex": "^3.1.0",
    "livepush": "^2.0.0",
    "lodash": "^4.17.21",
    "memoizee": "^0.4.17",
    "mqtt": "^5.14.1",
    "network-checker": "^1.0.6",
    "sqlite3": "^5.1.6",
    "strict-event-emitter-types": "^2.0.0",
    "systeminformation": "^5.23.5",
    "typed-error": "^3.2.1",
    "uuid": "^13.0.0",
    "ws": "^8.18.3"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.11",
    "@types/bluebird": "^3.5.42",
    "@types/body-parser": "^1.19.5",
    "@types/cors": "^2.8.17",
    "@types/dockerode": "^3.3.28",
    "@types/express": "^4.17.21",
    "@types/lodash": "^4.17.0",
    "@types/memoizee": "^0.4.12",
    "@types/node": "^22.10.6",
    "rimraf": "^5.0.10",
    "ts-node": "^10.0.0",
    "tsx": "^4.20.6",
    "typescript": "^5.7.3"
  }
}
